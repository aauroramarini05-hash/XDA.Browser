<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENUTO PRINCIPALE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ===== TOP BAR ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2E3F4F"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Menu -->
            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <!-- URL BAR -->
            <EditText
                android:id="@+id/urlBar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Search or enter URL"
                android:textColor="#FFFFFF"
                android:textColorHint="#BBBBBB"
                android:background="@drawable/rounded_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="textUri"
                android:singleLine="true"/>

            <!-- GO BUTTON -->
            <ImageView
                android:id="@+id/goButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#FFFFFF"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- ===== HOME CARDS ===== -->
        <GridLayout
            android:id="@+id/homeGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

            <!-- GOOGLE -->
            <LinearLayout
                android:id="@+id/btnGoogle"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/home_card"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo_google"/>

                <TextView
                    android:text="Google"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- YOUTUBE -->
            <LinearLayout
                android:id="@+id/btnYoutube"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/home_card"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo_youtube"/>

                <TextView
                    android:text="YouTube"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- WIKIPEDIA -->
            <LinearLayout
                android:id="@+id/btnWikipedia"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/home_card"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo_wikipedia"/>

                <TextView
                    android:text="Wikipedia"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- AURYXTRENDS -->
            <LinearLayout
                android:id="@+id/btnAuryx"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/home_card"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:text="AuryxTrends"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

        </GridLayout>

        <!-- ===== WEBVIEW ===== -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- ===== DRAWER LATERALE ===== -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1C1C1C"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="Browser Settings"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/btnDesktop"
            android:text="Desktop Mode"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/home_card"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/btnIncognito"
            android:text="Incognito Mode"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/home_card"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/btnHomepage"
            android:text="Homepage"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/home_card"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"/>

        <TextView
            android:text="Version 1.226.01"
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
