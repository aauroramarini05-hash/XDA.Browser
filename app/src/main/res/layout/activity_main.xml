<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENITORE PRINCIPALE -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <!-- HOMEPAGE -->
        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/addressBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Search or enter URL"
                android:background="@drawable/rounded_input"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AuryxBrowser"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btnGoogle"
                    style="@style/SiteButton"
                    android:text="Google"/>

                <Button
                    android:id="@+id/btnYouTube"
                    style="@style/SiteButton"
                    android:text="YouTube"/>

                <Button
                    android:id="@+id/btnWikipedia"
                    style="@style/SiteButton"
                    android:text="Wikipedia"/>

                <Button
                    android:id="@+id/btnAuryx"
                    style="@style/SiteButton"
                    android:text="AuryxTrends"/>
            </GridLayout>

        </LinearLayout>

        <!-- WEBVIEW FULLSCREEN -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- MENU LATERALE -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#121212"
        android:padding="16dp">

        <TextView
            android:text="Menu"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDesktopMode"
            style="@style/SideButton"
            android:text="Desktop Mode"/>

        <Button
            android:id="@+id/btnIncognito"
            style="@style/SideButton"
            android:text="Incognito Mode"/>

        <Button
            android:id="@+id/btnHistory"
            style="@style/SideButton"
            android:text="Back"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
