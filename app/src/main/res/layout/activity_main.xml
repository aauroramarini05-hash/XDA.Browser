<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENUTO PRINCIPALE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient"
        android:padding="16dp">

        <EditText
            android:id="@+id/addressBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search or enter URL"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AuryxBrowser"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnGoogle"
                style="@style/SiteButton"
                android:text=" Google"
                android:drawableStart="@android:drawable/ic_menu_search"/>

            <Button
                android:id="@+id/btnYouTube"
                style="@style/SiteButton"
                android:text=" YouTube"
                android:drawableStart="@android:drawable/ic_media_play"/>

            <Button
                android:id="@+id/btnWikipedia"
                style="@style/SiteButton"
                android:text=" Wikipedia"
                android:drawableStart="@android:drawable/ic_menu_info_details"/>

            <Button
                android:id="@+id/btnAuryx"
                style="@style/SiteButton"
                android:text=" AuryxTrends"
                android:drawableStart="@android:drawable/ic_menu_view"/>

        </GridLayout>

    </LinearLayout>

    <!-- MENU LATERALE -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#121212"
        android:padding="16dp">

        <TextView
            android:text="Menu"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnDesktopMode"
            style="@style/SideButton"
            android:text="Desktop Mode"/>

        <Button
            android:id="@+id/btnIncognito"
            style="@style/SideButton"
            android:text="Incognito"/>

        <Button
            android:id="@+id/btnHistory"
            style="@style/SideButton"
            android:text="History"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
