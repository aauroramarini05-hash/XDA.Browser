<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principale -->
    <style name="Theme.AuryxBrowser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F2027</item>
        <item name="colorPrimaryVariant">#203A43</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">#0F2027</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Pulsanti homepage -->
    <style name="SiteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <!-- Pulsanti menu laterale -->
    <style name="SideButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
    </style>

</resources>
